<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leagueofchampions.kiit.UI.Scorecard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="match_parent"
                android:text="Scorecard"
                android:gravity="center"
                android:textSize="23sp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/Team1_Name_Scorecard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="Galacticos"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/Team1_Image_Scorecard"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/galacticos" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="250dp">

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:paddingLeft="30dp"
                    android:text="Batting"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="30"
                        android:text="Batsman"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="10"
                        android:text="Runs"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="10"
                        android:text="Balls"
                        />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="10"
                        android:text="4"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="10"
                        android:text="6"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="30"
                        android:text="Strike Rate"
                        />



                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:minHeight="200dp"
                    android:id="@+id/Team1_Batting_Scorecard"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="end"
                    android:paddingRight="20dp"
                    android:text="Total :"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="0dp"
                    android:textSize="17sp"
                    android:text="45"
                    android:id="@+id/Team1_Total_Score"
                    android:layout_weight="50"
                    android:paddingRight="20dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:textSize="17sp"
                    android:layout_weight="50"
                    android:gravity="end"
                    android:text="Extras :"
                    android:paddingRight="20dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="0dp"
                    android:textSize="17sp"
                    android:text="45"
                    android:id="@+id/Team1_Total_Extras_Earned"
                    android:layout_weight="50"
                    android:paddingRight="20dp"
                    android:layout_height="match_parent" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="250dp">

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:paddingLeft="30dp"
                    android:text="Bowling"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="20"
                        android:text="Bowler"
                        />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="10"
                        android:text="Over"
                        />
                    <TextView

                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="20"
                        android:text="Maiden"
                        />


                    <TextView

                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="10"
                        android:text="Runs"
                        />
                    <TextView

                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="20"
                        android:text="Wickets"
                        />

                    <TextView

                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="20"
                        android:text="Econ"
                        />





                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:minHeight="200dp"
                    android:id="@+id/Team2_Bowling_Scorecard"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Galacticos"
                    android:id="@+id/Team2_Name_Scorecard"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_width="50dp"
                    android:src="@drawable/galacticos"
                    android:id="@+id/Team2_Image_Scorecard"
                    android:layout_height="50dp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="250dp">

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:paddingLeft="30dp"
                    android:text="Batting"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="30"
                        android:text="Batsman"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="10"
                        android:text="Runs"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="10"
                        android:text="Balls"
                        />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="10"
                        android:text="4"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="10"
                        android:text="6"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="30"
                        android:text="Strike Rate"
                        />



                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:minHeight="200dp"
                    android:id="@+id/Team2_Batting_Scorecard"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="250dp">

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:paddingLeft="30dp"
                    android:text="Bowling"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="20"
                        android:text="Bowler"
                        />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="10"
                        android:text="Over"
                        />
                    <TextView

                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="20"
                        android:text="Maiden"
                        />


                    <TextView

                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="10"
                        android:text="Runs"
                        />
                    <TextView

                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="20"
                        android:text="Wickets"
                        />

                    <TextView

                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="20"
                        android:text="Econ"
                        />





                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:minHeight="200dp"
                    android:id="@+id/Team1_Bowling_Scorecard"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="end"
                    android:paddingRight="20dp"
                    android:text="Total :"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="0dp"
                    android:textSize="17sp"
                    android:text="45"
                    android:id="@+id/Team2_Total_Score"
                    android:layout_weight="50"
                    android:paddingRight="20dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:textSize="17sp"
                    android:layout_weight="50"
                    android:gravity="end"
                    android:text="Extras :"
                    android:paddingRight="20dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="0dp"
                    android:textSize="17sp"
                    android:text="45"
                    android:id="@+id/Team2_Total_Extras_Earned"
                    android:layout_weight="50"
                    android:paddingRight="20dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <com.romainpiel.shimmer.ShimmerTextView
                android:layout_width="match_parent"
                android:textSize="23sp"
                android:id="@+id/ManOfTheMatch"
                android:textColor="#ffb301"
                android:text="Dwijraj"
                android:gravity="center"
                android:layout_height="wrap_content" />


        </LinearLayout>





    </ScrollView>


</LinearLayout>
