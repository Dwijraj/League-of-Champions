                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:text="6"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:text="SR"
                        android:textColor="#000"
                        android:textStyle="bold" />


                </LinearLayout>


                <android.support.v7.widget.RecyclerView
