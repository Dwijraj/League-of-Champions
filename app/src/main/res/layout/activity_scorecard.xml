                        android:gravity="center"
                        android:text="O"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:text="M"
                        android:textColor="#000"
                        android:textStyle="bold" />


                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:text="R"
                        android:textColor="#000"
